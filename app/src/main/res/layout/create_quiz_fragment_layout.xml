<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:textDirection="ltr"
    android:layoutDirection="ltr"
    android:layout_margin="16dp">

<LinearLayout
    android:id="@+id/question_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/question_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:layout_alignParentLeft="true"
            android:background="#70FFFFFF"
            android:hint="Enter question here."
            android:textAlignment="gravity"
            android:textDirection="firstStrong"
            android:paddingHorizontal="20dp"
            android:paddingTop="32dp"
            android:textSize="24sp"
            android:visibility="visible"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="start"/>

            <!--<Button-->
                <!--android:id="@+id/save_et"-->
                <!--android:text="save"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_toRightOf="@+id/question_et"/>-->
        </LinearLayout>


        <TextView
            android:id="@+id/select_question_type_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select question type:"
            android:padding="20dp"
            android:textSize="18dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_quest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginVertical="5dp"
                android:gravity="left"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/inner_create_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

</RelativeLayout>
        </LinearLayout>
    </ScrollView>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/next_but"
            android:theme="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:visibility="invisible"
            android:layout_marginHorizontal="16dp"
            android:layout_toRightOf="@id/submit_but"
            />

        <Button
            android:id="@+id/save_question"
            android:theme="@style/AppTheme.ButtonHighlighted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Question"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginBottom="42dp"
            android:layout_marginHorizontal="16dp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/prev_but"
            android:text="Prev"
            android:visibility="invisible"
            android:theme="@style/AppTheme.Button"
            android:layout_marginHorizontal="16dp"
            android:layout_toLeftOf="@id/submit_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
</LinearLayout>
