<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/total_score_fragment"
        android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/back3"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#95ffecb3"
        android:layout_margin="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your final score is:"
            android:textColor="#000000"
            android:padding="40dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="32sp"/>
        <TextView
            android:id="@+id/final_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="100 Points"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_weight="9"
            android:textColor="#880e4f"
            android:textSize="32sp"

            />
        <Button
            android:id="@+id/review_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="review Answers"
            android:gravity="center"
            android:background="#ffecb3"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/try_again_butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="try again"
            android:gravity="center"
            android:background="#FFE082"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="5dp"

            />

        <Button
            android:id="@+id/quit_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quit"
            android:gravity="center"
            android:background="#FFD54F"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

</LinearLayout>


