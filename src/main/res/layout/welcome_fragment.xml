<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/welcomeBkg"
               >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Welcom to QuizApp!"
        android:padding="24dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/select_quiz"
        android:theme="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_quiz"
        android:textSize="@dimen/page_button_text"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        />

    <Button
        android:id="@+id/create_quiz"
        android:theme="@style/AppTheme.Button"
        android:layout_above="@id/select_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_quiz"
        android:textSize="@dimen/page_button_text"
        android:layout_margin="24dp"
        />

</RelativeLayout>
